    return a + b;
}
Console.WriteLine(nwm(a, b));

//suma liczb liczby 

//KAzda

int liczba = 345;
int sumaCyfr = 0;

while (liczba > 0)
{
    sumaCyfr += liczba % 10;
    liczba /= 10;
}

Console.WriteLine("Suma cyfr liczby wynosi {0}", sumaCyfr);

// 2 cyfrowa 

int liczba = 27;
int sumaCyfr = (liczba / 10) + (liczba % 10);
Console.WriteLine("Suma cyfr liczby {0} wynosi {1}", liczba, sumaCyfr);

